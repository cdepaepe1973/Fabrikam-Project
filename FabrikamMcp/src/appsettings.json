{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FabrikamApi": {
    "BaseUrl": "https://fabrikam-api-dev.levelupcsp.com"
  },
  "Authentication": {
    "Mode": "BearerToken",
    "Jwt": {
      "SecretKey": "",
      "Issuer": "https://localhost:7297",
      "Audience": "FabrikamApi",
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true,
      "ClockSkewInMinutes": 5,
      "RequireHttpsMetadata": true
    },
    "ServiceJwt": {
      "ExpirationHours": 24,
      "ServiceIdentity": "fabrikam-mcp-service",
      "EnableCaching": true,
      "CacheRefreshThresholdMinutes": 60
    },
    "GuidValidation": {
      "GuidPattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "RejectEmptyGuid": true,
      "ValidateInDatabase": true,
      "ValidationCacheMinutes": 60
    },
    "EnableAuditLogging": true
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  }
}
